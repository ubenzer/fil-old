{
  "name": "fil",
  "version": "2.0.1",
  "description": "A static site generator",
  "author": "Umut Benzer <umut@benzer.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubenzer/fil.git"
  },
  "bugs": {
    "url": "https://github.com/ubenzer/fil/issues"
  },
  "keywords": [
    "static-site",
    "jekyll",
    "hexo",
    "blog",
    "wordpress",
    "collections",
    "taxonomy"
  ],
  "bin": "build/app/bin/cli.js",
  "main": "build/app/core/index.js",
  "license": "MIT",
  "preferGlobal": true,
  "dependencies": {
    "chalk": "^1.1.3",
    "front-matter": "^2.1.0",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "inversify": "^2.0.0",
    "inversify-binding-decorators": "^2.0.0",
    "inversify-inject-decorators": "^2.0.0",
    "liftoff": "^2.3.0",
    "mime": "^1.3.4",
    "moment": "^2.14.1",
    "pad-left": "^2.1.0",
    "pug": "^2.0.0-beta5",
    "reflect-metadata": "^0.1.8",
    "require-all": "^2.0.0",
    "rho": "^0.2.4",
    "rxjs": "^5.0.0-beta.12",
    "semver": "^5.3.0",
    "sharp": "^0.16.0",
    "sitemap": "^1.8.1",
    "slug": "^0.9.1",
    "source-map": "^0.5.6",
    "string": "^3.3.1",
    "tildify": "^1.2.0",
    "tracer": "^0.8.3"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "shx": "^0.1.4",
    "sinon": "^1.17.5",
    "tslint": "^3.14.0",
    "typescript": "^2.0.0",
    "typings": "^1.3.2"
  },
  "scripts": {
    "prepublish": "npm run dev:typings && npm run dev:compile",
    "dev:compile": "shx rm -rf build && tsc",
    "dev:typings": "shx rm -rf typings && typings install",
    "test": "nyc mocha './{,!(node_modules)/**/}*.test.js'",
    "lint": "tslint --project=tslint.json"
  },
  "engines": {
    "node": ">=6.5.0"
  },
  "nyc": {
    "include": [
      "build/app/**"
    ],
    "reporter": [
      "lcov",
      "text",
      "json"
    ]
  }
}
