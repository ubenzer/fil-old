{
  "name": "fil",
  "version": "0.0.8",
  "description": "A static site generator",
  "author": "Umut Benzer <umut@benzer.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubenzer/fil.git"
  },
  "bugs": {
    "url": "https://github.com/ubenzer/fil/issues"
  },
  "keywords": [
    "static-site",
    "jekyll",
    "hexo",
    "blog",
    "wordpress",
    "collections",
    "taxonomy"
  ],
  "bin": "build/app/cli.js",
  "main": "build/app/index.js",
  "license": "MIT",
  "preferGlobal": true,
  "dependencies": {
    "chalk": "^1.1.3",
    "front-matter": "^2.1.0",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "inversify": "^2.0.0-rc.10",
    "inversify-binding-decorators": "^1.0.0-rc.2",
    "jade": "^1.11.0",
    "liftoff": "^2.3.0",
    "mime": "^1.3.4",
    "moment": "^2.14.1",
    "pad-left": "^2.1.0",
    "reflect-metadata": "^0.1.8",
    "rho": "^0.2.4",
    "semver": "^5.3.0",
    "sharp": "^0.16.0",
    "sitemap": "^1.8.1",
    "slug": "^0.9.1",
    "string": "^3.3.1",
    "tildify": "^1.2.0"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "inversify-dts": "^2.0.0",
    "inversify-inject-decorators": "^1.0.0-beta.1",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "shx": "^0.1.3",
    "sinon": "^1.17.5",
    "typescript": "^1.8.10",
    "typings": "^1.3.2"
  },
  "scripts": {
    "prepublish": "npm run dev:typings && npm run dev:compile",
    "dev:compile": "shx rm -rf build && tsc",
    "dev:typings": "shx rm -rf typings && typings install",
    "test": "nyc mocha build/test/**/*.js"
  },
  "engines": {
    "node": ">=6.3.1"
  },
  "nyc": {
    "include": [
      "build/app/**"
    ],
    "reporter": [
      "lcov",
      "text",
      "json"
    ]
  }
}
