{
  "name": "fil",
  "version": "0.0.7",
  "description": "A static site generator",
  "author": "Umut Benzer <umut@benzer.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubenzer/fil.git"
  },
  "bugs": {
    "url": "https://github.com/ubenzer/fil/issues"
  },
  "keywords": [
    "static-site",
    "jekyll",
    "hexo",
    "blog",
    "wordpress",
    "collections",
    "taxonomy"
  ],
  "bin": "build/app/cli.js",
  "main": "build/app/index.js",
  "license": "MIT",
  "preferGlobal": true,
  "dependencies": {
    "chalk": "^1.1.3",
    "front-matter": "^2.1.0",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "jade": "^1.11.0",
    "liftoff": "^2.3.0",
    "mime": "^1.3.4",
    "moment": "^2.14.1",
    "pad-left": "^2.1.0",
    "rho": "^0.2.4",
    "semver": "^5.3.0",
    "sharp": "^0.15.1",
    "sitemap": "^1.8.1",
    "slug": "^0.9.1",
    "string": "^3.3.1",
    "tildify": "^1.2.0"
  },
  "devDependencies": {
    "shx": "^0.1.3",
    "typescript": "^1.8.10",
    "typings": "^1.3.2"
  },
  "scripts": {
    "prepublish": "npm run dev:compile && npm run dev:typings",
    "dev:compile": "./node_modules/.bin/shx rm -rf build && ./node_modules/.bin/tsc",
    "dev:typings": "./node_modules/.bin/shx rm -rf typings && ./node_modules/.bin/typings install"
  },
  "engines": {
    "node": ">=6.3.1"
  }
}
